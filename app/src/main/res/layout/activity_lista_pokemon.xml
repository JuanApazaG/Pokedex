<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!-- Aquí agregarás los elementos -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="fitCenter"
                android:src="@drawable/entei" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Altura: 2.1m    Categoria: Volcan     Peso:198kg" />

            <Button
                android:id="@+id/pokemon_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="pokemon_select"
                android:text="Entei" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/suicune"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Altura: 2m    Categoria: Aurora     Peso:187kg" />

            <Button
                android:id="@+id/pokemon_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Suicune"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/larvitar"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Altura: 0.6m    Categoria: piel Roca    Peso:72kg" />

            <Button
                android:id="@+id/pokemon_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Larvitar"/>



        </LinearLayout>

    </LinearLayout>



    <!-- Aquí agregarás las imágenes del centro -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/tyranitar"
                android:scaleType="fitCenter" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Altura: 2m    Categoria: coraza    Peso:202kg     Habilidad: chorro Arena" />

            <Button
                android:id="@+id/pokemon_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tyranitar"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/lugia"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Altura: 5.2m    Categoria: Buceo    Peso:216kg      Habilidad: Presion"  />


            <Button
                android:id="@+id/pokemon_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lugia"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/hooh"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Altura: 3.8m    Categoria: Arcoiris    Peso:199kg   Habilidad:Presion" />

            <Button
                android:id="@+id/pokemon_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HO-OH"/>

        </LinearLayout>

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="130dp"
        android:layout_height="159dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="4dp">

        <!-- Contenido de la CardView -->
        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Botón -->
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="85dp"
                android:layout_height="76dp"
                android:scaleType="centerCrop"
                android:src="@drawable/entei" />

            <Button
                android:id="@+id/infor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entei" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>
